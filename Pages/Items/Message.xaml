<UserControl x:Class="ChatStudents_Kylosov.Pages.Items.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatStudents_Kylosov.Pages.Items"
             mc:Ignorable="d">
    <Grid Background="#FFF7F7F7">
        <Image x:Name="imgUser" Margin="10,10,0,0" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Images/ic-user.png">
            <Image.Clip>
                <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,30,30"/>
            </Image.Clip>
        </Image>
        <Label x:Name="FIO" Content="Кылосов Матвей Михайлович" Margin="45,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="10"/>
        <TextBlock x:Name="tbMessage" Margin="50,26,0,10" TextWrapping="Wrap"/>
        <TextBlock x:Name="tbDate" Margin="0,45,0,0" TextWrapping="Wrap" FontSize="10" Text="12:12 12.12.2012" HorizontalAlignment="Right" Width="74"/>
    </Grid>
</UserControl>
